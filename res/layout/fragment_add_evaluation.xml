<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" >

<LinearLayout 
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" >
   <LinearLayout 
        android:layout_width="match_parent" 
       android:layout_height="wrap_content" android:orientation="horizontal" >
       <TextView
           android:id="@+id/patient_infprmation" android:layout_width="match_parent" android:layout_height="wrap_content"
           android:text="病人的基本信息:"  android:textSize="20dp"
           android:background="?android:attr/detailsElementBackground"
             />
   </LinearLayout>
   <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout  android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                android:id="@+id/patient_infprmation" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="入院方式:"  android:textSize="15dp"/>
            <RadioGroup
 				android:layout_width="wrap_content"  android:layout_height="wrap_content"
       		    android:orientation="horizontal"  android:checkedButton="@+id/lunch" android:gravity="center"
                android:id="@+id/method">
               <RadioButton
            		android:text="步行"  android:id="@+id/add_dcadvice_but_longtime"
            		android:checked="true"  style="@style/textlarge" />
               <RadioButton
          		    android:text="轮椅"    style="@style/textlarge"
                    android:id="@+id/add_dcadvice_but_shorttime" />
               <RadioButton
           		    android:text="平车"   style="@style/textlarge"
                    android:id="@+id/add_dcadvice_but_shorttime" />
            </RadioGroup>
        </LinearLayout>
   </LinearLayout>
   
       
</LinearLayout>
</ScrollView>